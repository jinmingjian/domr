<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.db4o.ome.product.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.db4o.ome.product.application"
            name="Db4o OM RCP">
         <property
               name="windowImages"
               value="icons/db4oicon_16.bmp,icons/alt_window_32.gif">
         </property>
         <property
               name="appName"
               value="Db4o OM RCP">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>

</plugin>
